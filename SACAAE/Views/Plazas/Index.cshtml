@model IEnumerable<SACAAE.Models.Plaza>

@{
    ViewBag.Title = "Plazas";
    Layout = "~/Views/Shared/Privado.cshtml";
}
@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#indexTable').DataTable({
                "language": {
                    url: "/Content/DataTables/Spanish.json",
                },
                responsive: true
            });
        });
    </script>
}

<h1 class="page-header">Plazas</h1>

@if (TempData.ContainsKey("MessageError"))
{
    <p class="text-danger">@TempData["MessageError"].ToString()</p>
}
@if (TempData.ContainsKey("MessageSuccess"))
{
    <p class="text-success">@TempData["MessageSuccess"].ToString()</p>
}

<p>
    <a href="@Url.Action("Create", "Plazas")"><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>  Agregar Plaza</a>
</p>

<div class="dataTables_wrapper">
    <table class="table table-hover" id="indexTable">
        <thead>
            <tr>
                <th>Código</th>
                <th class="text-center">Tipo de Plaza</th>
                <th class="text-center">Tipo según Tiempo</th>
                <th class="text-center">Horas Totales</th>
                <th class="text-center">Tiempo de Vigencia</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.PlazaType)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.TimeType)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.TotalHours)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.EffectiveTime)
                </td>
                <td class="text-center">

                    <a href="@Url.Action("Details", new { id = item.ID })" title="Ver detalle"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a> &nbsp
                    <a href="@Url.Action("Allocate", new { id = item.ID })" title="Asignación Profesor"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></a> &nbsp
                    <a href="@Url.Action("Edit", new { id = item.ID })" title="Editar"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a> &nbsp
                    <a href="@Url.Action("Delete", new { id = item.ID })" title="Eliminar"><span class="glyphicon  glyphicon-trash" aria-hidden="true"></span></a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>