@model IEnumerable<SACAAE.Models.ViewModels.CursoIndexViewModel>

@{
    ViewBag.Title = "Cursos";
    Layout = "~/Views/Shared/Privado.cshtml";
}
@section Scripts {
<script type="text/javascript">
    $(document).ready(function () {
        $('#indexTable').DataTable({
            "language": {
                url: "/Content/DataTables/Spanish.json",
            },
            responsive: true
        });
    });
</script>
}
 
<link rel="stylesheet" href="../Content/themes/blue/style.css" type="text/css" media="print, projection, screen">


<body>
    <h1 class="page-header">Cursos</h1>
    @if (TempData.ContainsKey("MessageError"))
    {
        <p class="text-danger">@TempData["MessageError"].ToString()</p>
    }
    @if (TempData.ContainsKey("MessageSuccess"))
    {
        <p class="text-success">@TempData["MessageSuccess"].ToString()</p>
    }
    <p>
        <a href="@Url.Action("CrearCurso", "Courses")"><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>  Agregar Curso</a>
    </p>
    <div class="dataTables_wrapper">
      <table id="indexTable" class="table table-hover">
        <thead>
            <tr>
                <th>
                    Nombre
                </th>
                <th class="text-center">
                    Código
                </th>
                <th class="text-center">
                    Horas Teóricas
                </th>
                <th class="text-center">
                    Bloque
                </th>
                <th class="text-center">
                    Externo
                </th>
                <th class="text-center">
                    Horas Prácticas
                </th>
                <th class="text-center">
                    Créditos
                </th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Code)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.TheoreticalHours)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Block)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.External)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.PracticeHours)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Credits)
                    </td>
                    <td class="text-center">
                        <a href="@Url.Action("Details", new { id = item.ID })" title="Ver Detalle"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a> &nbsp
                        <a href="@Url.Action("Edit", new { id = item.ID })" title="Editar"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a> &nbsp
                        <a href="@Url.Action("Delete", new { id = item.ID })" title="Eliminar"><span class="glyphicon  glyphicon-trash" aria-hidden="true"></span></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
</body>