@model SACAAE.Models.Curso

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/Privado.cshtml";
}



<style type="text/css">
    body {
        margin-left: 10px;
    }

    p {
        margin-left: 20px;
    }

