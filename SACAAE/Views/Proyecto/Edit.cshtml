@model SACAAE.Models.Project
@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/Privado.cshtml";
}
<div class="col-lg-4">
    <h2>Editar Proyecto</h2>
    <hr />
    <div class="span12">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)



            @Html.HiddenFor(model => model.ID)

            <div class="editor-label">
                @Html.Label("Nombre")
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.Name, new
               {
                   @class = "form-control",
                   @required = "true"
               })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
            <br />
            <div class="editor-label">
                @Html.Label("Inicio")
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.Start, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Start)
            </div>
            <br />
            <div class="editor-label">
                @Html.Label("Fin")
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.End, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.End)
            </div>
            <br />
            <div class="editor-label">
                @Html.Label("Link")
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.Link, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Link)
            </div>
            <br />
            <hr />
            <p>
                <input type="submit" class="btn" value="Guardar" /> |
                @Html.ActionLink("Regresar", "Index")
            </p>

        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
