
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Privado.cshtml";
}
@section Scripts {
    <script src="@Url.Content("~/Scripts/SiteScripts/reporteProfeCurso.js")"></script>
}
<h2>Seleccionar Plan de Estudio</h2>
@if (TempData.ContainsKey("MessageError"))
{
    <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        @TempData["MessageError"].ToString()
    </div>
}
@if (TempData.ContainsKey("MessageSuccess"))
{
    <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        @TempData["MessageSuccess"].ToString()
    </div>
}
@using (Html.BeginForm())
{
    <div class="row-fluid">
        <div class="col-lg-5">
            <div class="span12">

                <div>
                    @Html.Label("Periodo")
                    @Html.DropDownList("Periodos", null, "-- Seleccione el periodo --", htmlAttributes: new { @class = "form-control" })
                </div>

                <div>
                    @Html.Label("Sede")
                    @Html.DropDownList("Sedes", null, "-- Seleccione la sede --", htmlAttributes: new { @class = "form-control" })
                </div>
                
                <div>
                    @Html.Label("Modalidad")
                    @Html.DropDownList("Modalidades", null, "-- Seleccione la modalidad --", htmlAttributes: new { @class = "form-control" })
                </div>

                <div>
                    @Html.Label("Plan")
                    <select id="Planes" name="Planes" class="form-control"></select>
                </div>

                <br />
                <br />
                <div class="row">
                    <div class="span12">
                        <div id="dvData">
                            <table id="datosReporte" class="table"></table>
                        </div>
                    </div>
                    <button class="btn" id="btnExport">Export</button>
                </div>
            </div>
        </div>
    </div>


}