@model SACAAE.Models.AcademicBlock

@{
    ViewBag.Title = "Eliminar Bloque";
    Layout = "~/Views/Shared/Privado.cshtml";
}

<div class="col-lg-4">
    <h2>Borrar Informaci&oacute;n de Bloque</h2>
    <hr />
    <div class="span12">
        <h4><span class="label label-warning">¿Est&aacute; seguro de que desea eliminar la informaci&oacute;n de este bloque? (Se perderan todos los cursos de este bloque)</span></h4>
        <br />
        <h4>
            <span class="label label-info">
                <label>Plan de Estudio:</label>
                <label id="plan" hidden>@ViewBag.Plan.ID</label>
                @ViewBag.Plan.Nombre
            </span>
        </h4>
        <h4>
            <span class="label label-info">
                <label>Descripci&oacute;n:</label>
                <label id="bloque" hidden>@ViewBag.Bloque</label>
                @Html.DisplayFor(model => model.Description)
            </span>
        </h4>
        <h4>
            <span class="label label-info">
                <label>Nivel:</label>
                @Html.DisplayFor(model => model.Level)
            </span>
        </h4>

        <br />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <p>
                <input type="submit" value="Borrar" class="btn" />
                |@Html.ActionLink("Regresar", "BloqueXPlan", new { id = @ViewBag.Plan.ID })
            </p>
        }
    </div>
</div>

